
<%= render partial: 'merchants/shared/header' %>
<h4>Invoice #<%= @invoice.id %></h4>
Status: <%= @invoice.status.capitalize %><br>
Created on: <%= @invoice.created_at.strftime('%A, %B %-d, %Y') %><br>
Total invoice revenue: <%= @invoice.merchant_invoice_revenue(@merchant) %><br>
Total invoice revenue including bulk discount(s): <%= @invoice.total_discounted_revenue %><br>
<h3>Customer:</h3>
 <%= "#{@invoice.customer.first_name} #{@invoice.customer.last_name}" %><br>

<h3>Items on this invoice:</h3>
<table>
  <tr>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Status</th>
    <th>Bulk Discount Applied</th>
  </tr>
  <% @invoice.invoice_items.each do |invoice_item| %>
    <div id='item_<%= invoice_item.id %>'>
      <tr>
        <td><%= invoice_item.item.name %></td>
        <td><%= invoice_item.quantity %></td>
        <td><%= invoice_item.unit_price_to_dollars %></td>
        <td>
          <%= form_with model: [@invoice, invoice_item], local: true do |form| %>
          <% form.label :status %>
          <%= form.select :status, options_for_select(['Pending', 'Packaged', 'Shipped'], invoice_item.status.capitalize) %>
          <%= form.submit 'Update Item Status' %>
        </td>
        <% end %>
        <td>
          <% if invoice_item.discounted? %>
            <%= link_to "#{ invoice_item.bulk_discount.discount }% off applied", merchant_bulk_discount_path(@merchant, invoice_item.bulk_discount) %>
          <% else %>
            <%= "N/A" %>
          <% end %>
        </td>
      </tr>
    </div>
  <% end %>
</table>
